<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <TextView
        android:id="@+id/list_content_textview_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="순위"/>
    <ImageView
        android:id="@+id/chatImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/list_content_textview_num"
        android:layout_toEndOf="@+id/list_content_textview_num"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/chatImage"
        android:layout_toRightOf="@+id/chatImage"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/list_content_textview_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="제목"/>
        <TextView
            android:id="@+id/list_content_textview_title_en"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="영문제목"/>
        <TextView
            android:id="@+id/list_content_textview_title_admission"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="관람가"/>
        <TextView
            android:id="@+id/list_content_textview_title_releaseDate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="개봉일"/>
    </LinearLayout>
</RelativeLayout>
